{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "strict": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
  }